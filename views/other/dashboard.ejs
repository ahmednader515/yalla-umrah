<% layout('layouts/boilerplate') %>

<div class="service-text">

    <h1>لوحة التحكم</h1>

    <h2>خدماتك</h2>

</div>

<div class="service-container">

    <% for(let campground of campgrounds) { %>

        <% if(currentUser && campground.author.equals(currentUser._id)) { %>
    
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid service-img" alt="" src="<%=campground.image%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= campground.title %> </h5>
                            <p class="card-text"><%= campground.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= campground.location%></small>
                            </p>
                            <p class="card-text">نوع الخدمة: <%= campground.category %></p>
                            <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">المزيد</a>
                        </div>
                    </div>
                </div>
            </div>
    
        <% } %>
    
    <% } %>
    
    <div class="button-container">

        <button class="btn"><a href="/campgrounds/new">اضافة خدمة جديدة</a></button>

    </div>

</div>
