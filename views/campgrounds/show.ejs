<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="col">
        <div class="card mb-3">
            <img src="<%= campground.image%>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">العنوان: <%= campground.title%></h5>
                <p class="card-text">الوصف: <%= campground.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted">الموقع: <%= campground.location%></li>
                <li class="list-group-item">مقدمة من شركة: <%= campground.author.username %></li>
                <li class="list-group-item">السعر: $<%= campground.price%></li>
                <li class="list-group-item">نوع الخدمة: <%= campground.category%></li>
            </ul>
            <% if (currentUser && campground.author.equals(currentUser._id)) { %>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/campgrounds/<%=campground._id%>/edit">تعديل</a>
                    <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">مسح</button>
                    </form>
                </div>
            <% } else { %>
                <div class="card-body">
                    <form class="d-inline" action="/services/<%= campground._id %>/pay" method="post">
                        <button class="btn btn-primary">شراء</button>
                    </form>
                </div>
            <% } %>

        </div>

    </div>
